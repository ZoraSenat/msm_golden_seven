<h1>Edit Actor <%=@actor.id%></h1>

<!-- need action -->
<form action="/actors/update_row/<%=@actor.id%>">
  <label for="dob">DOB</label>
  <input type="text" id="dob" name="dob" placeholder="DOB" value="<%=@actor.dob%>">

  <label for="name">Name</label>
  <input type="text" id="name" name="name" placeholder="Name" value="<%=@actor.name%>">

  <label for="bio">Bio</label>
  <input type="text" id="bio" name="bio" placeholder="Bio" value="<%=@actor.bio%>">

  <label for="image_url">Image URL</label>
  <input type="text" id="image_url" name="image_url" placeholder="Image URL" value="<%=@actor.image_url%>">

  <button type="submit">Update Actor</button>
</form>
