<h1>Roles</h1>
<hr>
<a href="roles/new_form"><button>Add A New Role</button></a>

<table>
  <tr>
    <th>Character Name</th>
    <th>Movie ID</th>
    <th>Actor ID</th>
  </tr>
  <% @list_of_roles.each do |role| %>
  <tr>
    <td>
      <%= role.character_name %>
    </td>
    <td>
      <%= role.movie_id %>
    </td>
    <td>
      <%= role.actor_id %>
    </td>
    <td>
        <a href="/roles/<%= role.id %>">Show</a>
    </td>
    <td>
        <a href="/roles/<%= role.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_role/<%= role.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
