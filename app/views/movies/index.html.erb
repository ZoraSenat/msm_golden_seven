<h1>Movies</h1>
<hr>
<a href="movies/new_form"><button>Add A New Movie</button></a>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
        <th>Description</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year %>
    </td>
    <td>
      <%= movie.duration %>
    </td>
    <td>
      <%= truncate(movie.description, :length => 30) %>
    </td>
    <td>
        <a href="/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
        <a href="/movies/<%= movie.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
